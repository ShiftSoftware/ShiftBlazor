<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<RootNamespace>ShiftSoftware.ShiftBlazor</RootNamespace>
		<Version>1.4.1</Version>

		<PackageId>ShiftSoftware.ShiftBlazor</PackageId>
		<PackageProjectUrl>https://github.com/ShiftSoftware/ShiftBlazor</PackageProjectUrl>
		<RepositoryUrl>https://github.com/ShiftSoftware/ShiftBlazor</RepositoryUrl>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
		<PackageIcon>icon.png</PackageIcon>

	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Blazored.FluentValidation" Version="2.1.0" />
		<PackageReference Include="Blazored.LocalStorage" Version="4.3.0" />
		<PackageReference Include="Microsoft.AspNetCore.WebUtilities" Version="2.2.0" />
		<PackageReference Include="Microsoft.OData.Client" Version="7.15.0" />
		<PackageReference Include="MudBlazor" Version="6.1.9" />
		<PackageReference Include="ShiftSoftware.ShiftEntity.Model" Version="1.4.1" />
		<PackageReference Include="ShiftSoftware.ShiftIdentity.Model" Version="1.4.1" />
		<PackageReference Include="Syncfusion.Blazor.Grid" Version="20.4.0.38" />
		<PackageReference Include="Syncfusion.Blazor.Themes" Version="20.4.0.38" />
	</ItemGroup>

	<ItemGroup>
		<None Include="Images\icon.png" Pack="true" PackagePath="\" />
		<Folder Include="Images\" />
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="ShiftBlazor.Tests" />
	</ItemGroup>
</Project>
